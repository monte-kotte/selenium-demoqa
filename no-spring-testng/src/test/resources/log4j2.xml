<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="Console">
            <PatternLayout>
                <Pattern>[%p] %d [%t] %M - %m%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File" fileName="target/logs/demoqa.log">
            <PatternLayout>
                <Pattern>[%p] %d [%t] %M - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
